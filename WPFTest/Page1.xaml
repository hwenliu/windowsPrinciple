<Page x:Class="WPFTest.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFTest"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="960"
      Title="入住查询" Loaded="Page_Loaded"  ShowsNavigationUI="False" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="19*"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGrid" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0"  VerticalAlignment="Stretch" AutoGeneratedColumns="dataGrid_AutoGeneratedColumns" EnableRowVirtualization="False" IsReadOnly="True">
            <!--<DataGridTemplateColumn Header="test">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Name="text" Text="hello"></TextBox>
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>-->

        </DataGrid>
        <Grid HorizontalAlignment="Stretch"  Margin="0" Grid.Row="0" VerticalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label x:Name="label1" Grid.Column="0" Grid.Row="1" Content="办理入住时间" HorizontalAlignment="Center" VerticalAlignment="Center"  />
            <DatePicker Name="DatePicker1" Grid.Column="1" Grid.Row="1" Visibility="Visible"  HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Center"/>
            <!--
           <Label x:Name="label2" Grid.Column="2" Grid.Row="1" Content="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            -->
            <DatePicker Name="DatePicker2" Grid.Column="3" Grid.Row="1" DisplayDateStart = "{Binding SelectedDate,ElementName=DatePicker1}" Visibility="Visible" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Center"/>
            <Label x:Name="label3" Grid.Column="4" Content="房号" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="roomNo" Grid.Column="5" HorizontalAlignment="Stretch" Margin="0"  TextWrapping="Wrap" Text="" VerticalAlignment="Center"/>
            <Label x:Name="label4" Grid.Column="6" Grid.Row="1" Content="顾客姓名" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="guestName" Grid.Column="7" Margin="0" HorizontalAlignment="Stretch"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" />
            <Button x:Name="button" Grid.Column="9" Content="查询" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Center" Click="button_Click"/>
            <Button x:Name="button1" Grid.Column="11" Content="导出" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Center" Click="button1_Click"/>
            <Grid Name="lineGrid" Visibility="Visible"  Grid.Column="2" HorizontalAlignment="Stretch"  Margin="0" Grid.Row="1"  VerticalAlignment="Center" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Line Stroke="Black" Grid.Column="1" X1="0" Y1="0" Y2="0" X2="{Binding ElementName=lineGrid, Path=ActualWidth}" VerticalAlignment="Center" StrokeThickness="3"></Line>
            </Grid>
            <Button x:Name="button2" Content="打印" Grid.Column="13" HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Center" Click="button2_Click"  />


        </Grid>
    </Grid>
</Page>
